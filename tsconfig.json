{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist/",
    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
