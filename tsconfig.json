{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/",
    /* Strict Type-Checking Options */
    "strict": true,                           /* Enable all strict type-checking options. */
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
